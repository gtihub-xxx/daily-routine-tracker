    <script>
        // „Ç¢„Éó„É™„ÅÆ„Éê„Éº„Ç∏„Éß„É≥
        const APP_VERSION = '2.2';
        const STORAGE_KEY = 'routineAppData_v2';
        const SETTINGS_KEY = 'routineAppSettings_v2';

        // „Éá„Éº„Çø‰øùÂ≠òÁî®„Ç™„Éñ„Ç∏„Çß„ÇØ„Éà
        let appData = {
            records: {},
            version: APP_VERSION,
            lastUpdated: new Date().toISOString()
        };

        let appSettings = {
            notificationEnabled: false,
            notificationTime: '20:00',
            version: APP_VERSION
        };

        // localStorage„Çµ„Éù„Éº„Éà„ÉÅ„Çß„ÉÉ„ÇØ
        function isLocalStorageSupported() {
            try {
                const test = 'test';
                localStorage.setItem(test, test);
                localStorage.removeItem(test);
                return true;
            } catch(e) {
                return false;
            }
        }

        // „Éá„Éº„Çø„Çí‰øùÂ≠ò
        function saveDataToStorage() {
            if (!isLocalStorageSupported()) {
                console.warn('localStorage is not supported');
                return false;
            }
            
            try {
                appData.lastUpdated = new Date().toISOString();
                appData.version = APP_VERSION;
                localStorage.setItem(STORAGE_KEY, JSON.stringify(appData));
                localStorage.setItem(SETTINGS_KEY, JSON.stringify(appSettings));
                updateStorageStatus(true);
                return true;
            } catch(e) {
                console.error('Failed to save data:', e);
                updateStorageStatus(false);
                return false;
            }
        }

        // „Éá„Éº„Çø„ÇíË™≠„ÅøËæº„Åø
        function loadDataFromStorage() {
            if (!isLocalStorageSupported()) {
                updateStorageStatus(false);
                return;
            }

            try {
                const savedData = localStorage.getItem(STORAGE_KEY);
                const savedSettings = localStorage.getItem(SETTINGS_KEY);
                
                if (savedData) {
                    const parsed = JSON.parse(savedData);
                    // „Éê„Éº„Ç∏„Éß„É≥„ÉÅ„Çß„ÉÉ„ÇØ„Å®„Éû„Ç§„Ç∞„É¨„Éº„Ç∑„Éß„É≥
                    appData = migrateData(parsed);
                }
                
      
